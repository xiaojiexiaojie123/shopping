.hot-nav
  width 100%
  height 180px
  position relative
  background-color #fff
  padding-bottom 10px
  .hot-nav-content
    width 100%
    overflow-x scroll
    .nav-content-inner
      width 720px
      height 180px
      display flex
      flex-wrap wrap
      .inner-item
        width 90px
        height 90px
        display flex
        flex-direction column
        justify-content center
        align-items center
        font-size 14px
        color #666666
        img
          width 40%
          margin-bottom 5px
  .hot-nav-content::-webkit-scrollbar
    display none
  .hot-nav-bottom
    width 100px
    height 2px
    background-color #ccc
    position absolute
    left 50%
    margin-left -50px
    bottom 8px
    .hot-nav-bottom-inner
      position absolute
      left 0
      height 100%
      background-color orangered
      width 0
